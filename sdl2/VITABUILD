pkgname=sdl2
pkgver=2.0.23
pkgrel=8
gitbranch=vitagl
url='https://www.libsdl.org'
source=("https://github.com/Northfear/SDL/archive/refs/heads/${gitbranch}.tar.gz")
sha256sums=(SKIP)
depends=('vitaGL')

prepare() {
  cd "SDL-${gitbranch}"
}

build() {
  cd "SDL-${gitbranch}"
  mkdir build && cd build
  cmake .. -DCMAKE_TOOLCHAIN_FILE=$VITASDK/share/vita.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix -DCMAKE_BUILD_TYPE=Release -DSDL_TEST=OFF -DVIDEO_VITA_VGL=ON
  make -j$(nproc)
}

package () {
  cd "SDL-${gitbranch}"
  cd build
  make DESTDIR=$pkgdir install
}
